{
  "name": "backend",
  "version": "2.0.0",
  "description": "Dataplatform backend API",
  "main": "app.js",
  "scripts": {
    "prestart": "npm install",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon app.js",
    "client": "cd ./frontend && npm start"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.7.0",
    "morgan": "^1.10.0",
    "prettier-eslint": "^16.1.2",
    "uuid": "^9.0.0",
    "vue-eslint-parser": "^8.0.0",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.1.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": true,
          "singleQuote": true,
          "trailingComma": "none"
        }
      ],
      "arrow-body-style": "off",
      "prefer-arrow-callback": "off"
    },
    "plugins": [
      "prettier"
    ]
  }
}
